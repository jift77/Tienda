<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>carrito</managed-bean-name>
        <managed-bean-class>com.tienda.beans.Cliente.Carrito</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope></managed-bean>
    <managed-bean>
        <managed-bean-name>tienda</managed-bean-name>
        <managed-bean-class>com.tienda.beans.Cliente.Tienda</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>bodega</managed-bean-name>
        <managed-bean-class>com.tienda.beans.Admin.Bodega</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>logon</managed-bean-name>
        <managed-bean-class>com.tienda.beans.Admin.Logon</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>producto</managed-bean-name>
        <managed-bean-class>com.tienda.entidades.Producto</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>categoria</managed-bean-name>
        <managed-bean-class>com.tienda.entidades.Categoria</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>caja</managed-bean-name>
        <managed-bean-class>com.tienda.beans.Cliente.Caja</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <navigation-case>
            <from-outcome>carrito</from-outcome>
            <to-view-id>/Cliente/carrito.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>tienda</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logon</from-outcome>
            <to-view-id>/Admin/logon.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Admin/*</from-view-id>
        <navigation-case>
            <from-outcome>productos</from-outcome>
            <to-view-id>/Admin/productos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Admin/productos.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>producto</from-outcome>
            <to-view-id>/Admin/producto.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Cliente/carrito.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>caja</from-outcome>
            <to-view-id>/Cliente/caja.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Admin/categorias.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>categoria</from-outcome>
            <to-view-id>/Admin/categoria.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Cliente/caja.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>confirmacion</from-outcome>
            <to-view-id>/Cliente/confirmacion.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
